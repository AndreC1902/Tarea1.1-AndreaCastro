<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1._1_AndreaCastro.MainPage"
             Title="Tarea 1.1 - Funciones Matemáticas">

    <ScrollView>
        <VerticalStackLayout
            Padding="30">

            <Label Text="Número 1"/>
            <Entry Keyboard="Numeric" 
                   x:Name="txtNumero1" 
                   Margin="0,0,0,10" 
                   BackgroundColor="#FFB0C4DE"/>

            <Label Text="Número 2"/>
            <Entry Keyboard="Numeric" 
                   x:Name="txtNumero2" 
                   Margin="0,0,0,20" 
                   BackgroundColor="#FFB0C4DE"/>

            <Button Text="Suma" Margin="5" BackgroundColor="#FFD230" TextColor="Black" Clicked="btnCalcularSuma"/>
            <Button Text="Resta" Margin="5" BackgroundColor="#FFD230" TextColor="Black" Clicked="btnCalcularResta"/>
            <Button Text="División" Margin="5"  BackgroundColor="#FFD230" TextColor="Black" Clicked="btnCalcularDivision"/>
            <Button Text="Multiplicación" Margin="5" BackgroundColor="#FFD230" TextColor="Black" Clicked="btnCalcularMultiplicacion"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
